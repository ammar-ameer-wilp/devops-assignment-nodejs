pipeline {
    agent { label 'nodejs' } 

    environment {
        NVM_DIR = "/home/ammar/.nvm"
        NODE_VERSION = "v18.16.1"
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/ammar-ameer-wilp/devops-assignment-nodejs.git', branch: 'main'
            }
        }

        stage('Install') {
            steps {
                sh '''
                    export NVM_DIR="$HOME/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && \\. "$NVM_DIR/nvm.sh"
                    nvm use $NODE_VERSION
                    node -v
                    npm -v
                    npm install
                '''
            }
        }

        stage('Test') {
            steps {
                script {
                    try {
                        sh '''
                            export NVM_DIR="$HOME/.nvm"
                            [ -s "$NVM_DIR/nvm.sh" ] && \\. "$NVM_DIR/nvm.sh"
                            nvm use $NODE_VERSION
                            node -v
                            npm -v
                            npm install --include=dev
                            npx jest
                        '''
                    } catch (e) {
                        echo "Tests failed: ${e}"
                        currentBuild.result = 'FAILURE'
                        throw e
                    }
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    try {
                        sh '''
                            export NVM_DIR="$HOME/.nvm"
                            [ -s "$NVM_DIR/nvm.sh" ] && \\. "$NVM_DIR/nvm.sh"
                            nvm use $NODE_VERSION
                            node -v
                            npm -v
                            npm run build
                        '''
                    } catch (e) {
                        echo "Build failed: ${e}"
                        currentBuild.result = 'FAILURE'
                        throw e
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'üöÄ Simulated deployment'
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed. Check logs.'
        }
    }
}
